{
  "name": "zipop-backend",
  "version": "1.0.0",
  "description": "Backend API for ZiPop multilingual reading app",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:reset": "prisma db push --force-reset && npm run db:seed",
    "test": "jest"
  },
  "keywords": [
    "zipop",
    "chinese",
    "learning",
    "api",
    "multilingual"
  ],
  "author": "ZiPop Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.2",
    "@fastify/multipart": "^8.0.0",
    "@fastify/static": "^6.12.0",
    "@prisma/client": "^6.13.0",
    "fastify": "^4.24.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "jest": "^29.7.0",
    "prisma": "^6.13.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
